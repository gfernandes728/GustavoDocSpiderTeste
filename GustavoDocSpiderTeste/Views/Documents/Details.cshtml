@model GustavoDocSpiderTeste.ViewModels.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Detalhes do Documento";
}

<h2 class="mb-4">Detalhes do Documento</h2>

<dl class="row">
    <dt class="col-sm-3">Título</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Descrição</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Nome do Arquivo</dt>
    <dd class="col-sm-9">@Model.FileName</dd>
</dl>

<a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-outline-primary">
    <i class="fas fa-download"></i> Baixar Arquivo
</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
    <i class="fas fa-edit"></i> Editar
</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
    <i class="fas fa-trash-alt"></i> Excluir
</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>