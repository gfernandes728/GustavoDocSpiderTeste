@model GustavoDocSpiderTeste.ViewModels.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Editar Documento";
}

<h2 class="mb-4">Editar Documento</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" maxlength="100" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <textarea asp-for="Description" class="form-control" rows="5" maxlength="2000" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p><strong>Arquivo Atual:</strong> @Model.FileName</p>
        <label asp-for="File">Novo Arquivo (opcional):</label>
        <input asp-for="File" type="file" class="form-control-file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
