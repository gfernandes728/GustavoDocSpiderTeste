@model GustavoDocSpiderTeste.ViewModels.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Editar Documento";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Título</label>
        <input asp-for="Title" class="form-control" maxlength="100" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <textarea asp-for="Description" class="form-control" rows="5" maxlength="2000" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <p class="mb-1"><strong>Arquivo Atual:</strong> @Model.FileName</p>
        <label asp-for="File">Novo Arquivo (opcional):</label>
        <input asp-for="File" type="file" class="form-control-file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <div class="d-flex flex-column flex-sm-row gap-2">
        <button type="submit" class="btn btn-success mb-2 mb-sm-0 mr-sm-2">
            <i class="fas fa-save"></i> Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Voltar
        </a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
